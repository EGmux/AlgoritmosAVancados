{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "rr-record",
        "command": "rr",
        "type": "shell",
        "args": [
          "record",
          "${workspaceRoot}/out/build/linux-debug/main",
          "<",
          "${workspaceRoot}/testcases/splaytree/2.in"
        ],
        "problemMatcher": []
      },
      {
        "label": "rr-replay",
        "command": "rr",
        "type": "shell",
        "args": [
          "replay",
          "-s",
          "50505",
          "-k"
        ],
        "problemMatcher": []
      },
      {
        "label": "compose-rr",
        "dependsOrder": "sequence",
        "dependsOn": [
          "rr-record",
          "rr-replay"
        ],
        "problemMatcher": []
      },
      {
        "label": "rr-record-diff",
        "command": "rr",
        "type": "shell",
        "args": [
          "record",
          "${workspaceRoot}/out/build/linux-debug/main",
          "<",
          "${workspaceRoot}/testcases/splaytree/${input:testCaseNum}.in",
          ">",
          "${workspaceRoot}/testcases/splaytree/${input:testCaseNum}test.out"
        ],
        "problemMatcher": []
      },
      {
        "label": "diff",
        "command": "diff",
        "type": "shell",
        "args": [
          "${workspaceRoot}/testcases/splaytree/${input:testCaseNum}.out",
          "${workspaceRoot}/testcases/splaytree/${input:testCaseNum}test.out",
          ">",
          "${workspaceRoot}/testcases/splaytree/${input:testCaseNum}diff.out"
        ],
        "problemMatcher": []
      },
      {
        "label": "compose-diff",
        "dependsOrder": "sequence",
        "dependsOn":[
          "rr-record-diff",
          "diff"
        ],
        "problemMatcher": []
      },
    ],
    "inputs": [
      {
        "id": "testCaseNum",
        "description": "Number of testcase to diff",
        "default" : "1",
        "type": "promptString"
      }
    ]
}